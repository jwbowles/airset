  $(function() {
    var sliderControl = new Array();
    $('input[data-type="range"]').each(function(i, el) {
      sliderControl[i] = $(el);
      var sharedPath = sliderControl[i].data('shared');
      if (sharedPath) {
      if(i==0){
	var path ='/volume-value';
      }else if(i==1)
        var volumeValue = new SharedValue('/volume-value')
          .open(function() {
            sliderControl[i].slider('enable');
          })
          .close(function() {
            sliderControl[i].slider('disable');
          })
          .change(function(event, value) {
            sliderControl[i].val(value).slider('refresh')
          });

        sliderControl[i].change(function(event, element) {
          volumeValue.set(sliderControl[i].val());
        });
      }else if(i==1){
        var toneValue = new SharedValue('/tone-value')
          .open(function() {
            sliderControl[i].slider('enable'); 
          })
          .close(function() {
            sliderControl[i].slider('disable');
          })
          .change(function(event, value) {
            sliderControl[i].val(value).slider('refresh')
          });

         sliderControl[i].change(function(event, element) {
           toneValue.set(sliderControl[i].val());
         });
       }
      }
    });
  });

